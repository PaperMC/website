---
import SoftwarePreview, { SoftwarePreviewType } from "@/components/SoftwarePreview.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout
  title="Downloads"
  description="Find downloads for our software â€“ including Paper, Velocity, and Waterfall."
  keywords={["papermc", "minecraft", "performance", "paper", "velocity", "waterfall", "downloads"]}
  canonical="/downloads"
>
  <header class="max-w-4xl flex flex-col items-center mx-auto px-4 pt-32 pb-16 lg:(pt-48 pb-26) gap-2">
    <h1 class="font-medium leading-normal lg:(text-5xl leading-normal) text-4xl">Downloads</h1>
    <p class="text-xl text-center mb-6">
      {"Select the software you want to download."}
    </p>
    <h2 class="text-2xl text-center font-medium mt-4">Server Software</h2>
    <div class="grid md:grid-cols-2 gap-2 px-2 xl:gap-4">
      <SoftwarePreview
        id="paper"
        name="Paper"
        icon="brand/paper"
        description="Paper is a Minecraft game server, designed to greatly improve performance and offer more advanced features and API."
        type={SoftwarePreviewType.Download}
      />
      <SoftwarePreview
        id="folia"
        name="Folia"
        icon="brand/folia"
        description="Folia is a new fork of Paper that adds regionized multithreading to the server. Access to Folia builds isn't currently available."
        type={SoftwarePreviewType.Download}
      />
    </div>
    <h2 class="text-2xl text-center font-medium mt-4">Proxy Software</h2>
    <div class="grid md:grid-cols-2 gap-2 px-2 xl:gap-4">
      <SoftwarePreview
        id="velocity"
        name="Velocity"
        icon="brand/velocity"
        description="Velocity is the modern, high-performance Minecraft server proxy."
        type={SoftwarePreviewType.Download}
      />
      <SoftwarePreview
        id="waterfall"
        name="Waterfall"
        icon="brand/waterfall"
        description="Waterfall is a legacy drop-in BungeeCord replacement with some additional improvements to performance and stability."
        type={SoftwarePreviewType.Download}
        eol
      />
    </div>
  </header>
</Layout>
