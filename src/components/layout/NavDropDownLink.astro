---
import { Icon } from "astro-icon/components";
import { clsx } from "clsx";

interface Props {
  href: string;
  target?: string;
  className?: string;
  eol?: boolean;
}

const { href, target, className, eol } = Astro.props;
---

<li
  class={clsx(
    "color-gray-200 text-gray-800 hover:text-blue-600 text-sm transition-colors dark:text-gray-200 dark:hover:text-blue-400",
    eol && "hover:text-red-600 dark:hover:text-red-400",
    className
  )}
>
  <a href={href} class={clsx("px-4 py-2 w-full", eol ? "flex items-center gap-2" : "block")} role="button" target={target}>
    <slot />
    {eol && <Icon name="icons/fontawesome/box-archive" class="h-4 fill-current" />}
  </a>
</li>
