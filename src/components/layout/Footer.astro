---
import { Icon } from "astro-icon/components";

const hash = import.meta.env.GIT_COMMIT_HASH;
---

<footer class="footer bg-background-dark-80 mt-8 py-12">
  <div class="m-auto max-w-7xl px-4">
    <div class="grid gap-10 text-sm text-white sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <div>
        <span class="font-semibold">Getting Started</span>
        <ul class="mt-4 space-y-2 leading-5 text-gray-400">
          <li>
            <a href="/downloads">Downloads</a>
          </li>
          <li>
            <a href="https://docs.papermc.io" target="_blank"> Documentation </a>
          </li>
          <li>
            <a href="/javadocs">Javadocs</a>
          </li>
        </ul>
      </div>
      <div>
        <span class="font-semibold">Community</span>
        <ul class="mt-4 space-y-2 leading-5 text-gray-400">
          <li>
            <a href="/community">Our Community</a>
          </li>
          <li>
            <a href="https://github.com/PaperMC" target="_blank" rel="noreferrer"> GitHub </a>
          </li>
          <li>
            <a href="https://discord.gg/papermc" target="_blank" rel="noreferrer"> Discord </a>
          </li>
          <li>
            <a href="https://forums.papermc.io/" target="_blank"> Forums </a>
          </li>
          <li>
            <a href="https://twitter.com/PaperPowered" target="_blank" rel="noreferrer"> Twitter </a>
          </li>
        </ul>
      </div>
      <div>
        <span class="font-semibold">PaperMC</span>
        <ul class="mt-4 space-y-2 leading-5 text-gray-400">
          <li>
            <a href="/team">Our Team</a>
          </li>
          <li>
            <a href="/contribute">Contribute</a>
          </li>
          <li>
            <a href="/sponsors">Sponsors</a>
          </li>
          <li>
            <a href="/news">News</a>
          </li>
          <li>
            <a href="https://hangar.papermc.io" target="_blank"> Hangar </a>
          </li>
        </ul>
      </div>
      <div>
        <span class="font-semibold">Terms</span>
        <ul class="mt-4 space-y-2 leading-5 text-gray-400">
          <li>
            <a href="https://forums.papermc.io/help/terms/">Terms</a>
          </li>
          <li>
            <a href="https://forums.papermc.io/help/privacy-policy/"> Privacy Policy </a>
          </li>
          <li>
            <a href="https://forums.papermc.io/help/legal-notice/"> Legal Notice </a>
          </li>
          <li>
            <a href="https://hangar.papermc.io/terms">Hangar Terms</a>
          </li>
          <li>
            <a href="https://hangar.papermc.io/privacy"> Hangar Privacy Policy </a>
          </li>
          <li>
            <a href="/community/guidelines">Community Guidelines</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-8 flex flex-row items-center gap-2 border-t border-gray-600/50 pt-10">
      <Icon name="brand/logo-marker-dark" class="h-12 w-auto cursor-pointer" />
      <div class="flex-1"></div>
      <div class="flex flex-col">
        <span class="text-sm text-gray-300">
          Â© {new Date().getFullYear()} The PaperMC Team
        </span>
        <span class="text-sm text-gray-300">
          <a class="text-sm font-medium text-blue-800 dark:text-blue-300" href="https://github.com/PaperMC/website/"> PaperMC/website </a>
          {" @ "}
          <a class="text-sm font-medium text-blue-800 dark:text-blue-300" href={`https://github.com/PaperMC/website/commit/${hash}`}>
            {hash}
          </a>
        </span>
      </div>
    </div>
    <div class="mt-4 flex flex-row items-center gap-2 pt-4">
      <span class="text-sm text-gray-300">
        This website is not an official Minecraft website and is not associated with Mojang Studios or Microsoft. All product and company
        names are trademarks or registered trademarks of their respective holders. Use of these names does not imply any affiliation or
        endorsement by them.
      </span>
    </div>
  </div>
</footer>

<style>
  @reference "tailwindcss";
  .footer a {
    @apply transition hover:text-gray-200;
  }
</style>
