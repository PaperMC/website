---
import { Image } from "astro:assets";

import ArchiveIcon from "@/assets/icons/fontawesome/box-archive.svg";

interface Props {
    id: string;
    name: string;
    icon: any;
    description?: string;
    download?: string;
    javadocs?: string;
    eol?: string;
}

const { id, name, icon, description, download, javadocs, eol } = Astro.props;
---

<a
    href={download
        ? `/downloads/${id}`
        : javadocs
          ? `https://jd.papermc.io/${id}/${javadocs}`
          : `/software/${id}`}
>
<article class="rounded-xl transition-all h-full p-4 md:p-8 hover:(shadow-lg bg-primary-300 dark:bg-gray-800)">
    <div class="flex flex-row items-center gap-4">
        <div class="rounded-lg w-12 h-12 bg-gray-800 p-3">
          <Image src={icon} alt={name} />
        </div>
        <h3 class="font-medium flex-1 flex gap-4 items-center">
            {name}
          <!-- {name} {eol && <ArchiveIcon className="fill-current h-6" />} -->
        </h3>
      </div>

      {description && (
        <p class="text-gray-800 dark:text-gray-200 mt-4">{description}</p>
      )}
</article>
</a>
